<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:background="@drawable/user_bg" >

        <com.ywb.view.RoundImageView
            android:id="@+id/iv_uimage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@drawable/user_image" />

        <com.ywb.view.RoundImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_uimage"
            android:layout_alignRight="@id/iv_uimage"
            android:src="@drawable/user_camera" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <!-- 账号 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号："
                android:textColor="@color/orange"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_uname"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:background="@drawable/login_edit_normal"
                android:drawableLeft="@drawable/user_icon"
                android:drawablePadding="8dp"
                android:hint="手机号/微信/QQ"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 密码 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码："
                android:textColor="@color/orange"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_upwd"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:background="@drawable/login_edit_normal"
                android:drawableLeft="@drawable/pwd_icon"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="请输入密码"
                android:numeric="integer"
                android:password="true"
                android:textSize="14sp" >
            </EditText>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/cb_show_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_pwd"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="显示密码"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@id/cb_show_pwd"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/orange"
                android:text="登录"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@id/btn_login"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#4169E1"
                android:text="注册"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_register"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:text="如果您已经有二手车账号，请直接登录"
                android:textColor="#00BFFF"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>